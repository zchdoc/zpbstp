{
  "tabWidth": 2, // 设置缩进为2个空格
  "maxLineLength": 2000, // 设置最大行长度为2000个字符（通常用于特殊情况，一般不建议设置这么高）
  "printWidth": 120, // 设置每行代码的最大长度为120个字符
  "singleQuote": true, // 使用单引号而不是双引号
  "trailingComma": "none", // 不添加尾随逗号
  "bracketSpacing": true, // 在对象字面量中的括号之间打印空格
  "semi": false, // 在语句末尾添加分号
  "useTabs": false, // 不使用制表符进行缩进，而是使用空格
  "arrowParens": "avoid", // 尽可能省略箭头函数参数的括号
  "bracketSameLine": true, // 将多行 HTML/JSX 元素的闭合括号放在最后一行的末尾
  "htmlWhitespaceSensitivity": "strict", // 严格控制 HTML 中的空白敏感性
  "proseWrap": "never", // 不对 Markdown 文件进行自动换行
  "endOfLine": "lf", // 使用 LF（换行符）作为行尾
  "embeddedLanguageFormatting": "auto", // 自动格式化嵌入的代码（如 CSS 或 JavaScript 在 HTML 中）
  "singleAttributePerLine": false, // 不强制每个属性单独一行
  "vueIndentScriptAndStyle": false, // 不对 Vue 文件中的 <script> 和 <style> 标签进行缩进
  "quoteProps": "as-needed", // 仅在需要时对对象属性使用引号
  "jsxSingleQuote": false, // 在 JSX 中使用双引号而不是单引号
  "insertPragma": false, // 不自动插入 @format 标记
  "requirePragma": false // 不要求文件顶部有 @format 标记
}
